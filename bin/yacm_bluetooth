#! /usr/bin/bash

if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 1>&2
   exit 1
fi

rfkill unblock bluetooth
sleep 1
bluetoothctl <<EOF
power on
EOF
sleep 1
bluetoothctl <<EOF
pair 00:1D:A5:00:2C:61
EOF
rfcomm bind 0 00:1D:A5:00:2C:61
python -m yacm.yacm_cli /dev/rfcomm0
rfcomm release 0
exit
bluetoothctl <<EOF
power off
EOF
