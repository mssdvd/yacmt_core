#! /usr/bin/bash

if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 1>&2
   exit 1
fi

clear
rfkill unblock bluetooth
sleep 1
bluetoothctl <<EOF
power on
pair 00:1D:A5:00:2C:61
EOF
sleep 1
rfcomm bind 0 00:1D:A5:00:2C:61
yacmt /dev/rfcomm0 --json
rfcomm release 0
exit
bluetoothctl <<EOF
power off
EOF
